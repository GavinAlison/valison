<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
    
<sqlMapConfig>
	<transactionManager type="JDBC" commitRequired="false">
		<dataSource type="SIMPLE">
			<property name="JDBC.Driver" value="oracle.jdbc.driver.OracleDriver"></property>
			<property name="JDBC.ConnectionURL" value="jdbc:oracle:thin:@localhost:1521:pms"></property>
			<property name="JDBC.Username" value="pms"></property>
			<property name="JDBC.Password" value="pms"></property>
		</dataSource>
	</transactionManager>
</sqlMapConfig>
